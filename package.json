{
  "name": "cap_services",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^6.8.4",
    "@sap/cds-hana": "^2",
    "@sap/cds-odata-v2-adapter-proxy": "^1.9.21",
    "@sap/xsenv": "^4.0.0",
    "@sap/xssec": "^3",
    "express": "^4.18.2",
    "passport": "^0",
    "sql": "^0.78.0",
    "sqlite3": "^5.1.6"
  },
  "scripts": {
    "start": "cds-serve"
  },
  "cds": {
    "hana": {
      "deploy-format": "hdbtable",
      "syntax": "hdi"
    },
    "build": {
      "tasks": [
        {
          "for": "hana",
          "dest": "../db"
        },
        {
          "for": "node-cf"
        }
      ]
    },
    "requires": {
      "db": {
        "kind": "sql"
      },
      "uaa": {
        "kind": "xsuaa"
      },
      "auth": {
        "[production]": {
          "strategy": "JWT"
        },
        "kind": "xsuaa"
      },
      "[production]": {
        "auth": {
          "kind": "xsuaa"
        },
        "destinations": true
      }
    }
  }
}
