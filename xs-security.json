{
  "xsappname": "myhanaapp",
  "tenant-mode": "dedicated",
  "scopes": [
    {
      "name": "uaa.user",
      "description": "UAA"
    },
    {
      "name": "$XSAPPNAME.User",
      "description": "UAA Display"
    },
    {
      "name": "$XSAPPNAME.Developer",
      "description": "UAA Display"
    },
    {
      "name": "$XSAPPNAME.Admin",
      "description": "Admin"
    }
  ],
  "role-templates": [
    {
      "name": "Token_Exchange",
      "description": "UAA",
      "scope-references": [
        "uaa.user"
      ]
    },
    {
      "name": "VCPDeveloperRole",
      "description": "UAA VCPDeveloperRole",
      "scope-references": [
        "$XSAPPNAME.Developer"
      ]
    },
    {
      "name": "VCPUserRole",
      "description": "UAA VCPUserRole",
      "scope-references": [
        "$XSAPPNAME.User"
      ]
    }
  ],
  "oauth2-configuration": {
    "credential-types": [
      "binding-secret",
      "x509"
    ],
    "redirect-uris": [
      "https://*.hana.ondemand.com/**",
      "https://*.applicationstudio.cloud.sap/**"
    ]
  },
  "attributes": []
}
